<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Bloom?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="646.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wareHouse.ReportController">
    <stylesheets>
        <URL value="@report.css" />
    </stylesheets>
    <children>
        <ImageView fitHeight="656.0" fitWidth="856.0" layoutX="-6.0" layoutY="-7.0">
            <image>
                <Image url="@../Joie_%20Blue_%20And%20yes,%20various%20shades%20of%20it_.jpg" />
            </image>
        </ImageView>
        <Pane layoutX="55.0" layoutY="134.0" prefHeight="418.0" prefWidth="750.0" styleClass="Pane" stylesheets="@report.css">
            <children>
                <TableView fx:id="table" layoutY="2.0" prefHeight="418.0" prefWidth="750.0" stylesheets="@report.css">
                    <effect>
                        <InnerShadow />
                    </effect>
                </TableView>
            </children>
        </Pane>
        <Label fx:id="report" alignment="CENTER" layoutX="299.0" layoutY="26.0" prefHeight="35.0" prefWidth="262.0" styleClass="header-title" stylesheets="@report.css" text="إدارة التقارير" textAlignment="CENTER" textFill="#fcfafa">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <ComboBox fx:id="myComboBox" layoutX="98.0" layoutY="580.0" onAction="#ReportType" prefHeight="47.0" prefWidth="142.0" promptText="حدد التقرير" styleClass="report_feild" />
        <Button fx:id="report_btn" contentDisplay="CENTER" layoutX="361.0" layoutY="580.0" mnemonicParsing="false" onAction="#handleGenerate" prefHeight="43.0" prefWidth="130.0" styleClass="btn-add" stylesheets="@report.css" text="تنفيذ">
            <effect>
                <InnerShadow />
            </effect>
        </Button>
        <Button fx:id="exportExc" layoutX="679.0" layoutY="580.0" mnemonicParsing="false" onAction="#exportExcel" prefHeight="43.0" prefWidth="130.0" styleClass="btn-update" stylesheets="@report.css" text="استخراج Excel" textAlignment="CENTER">
            <effect>
                <InnerShadow />
            </effect>
        </Button>
        <Label fx:id="lbcombo" layoutX="100.0" layoutY="555.0" prefHeight="20.0" prefWidth="142.0" textFill="RED">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Button fx:id="exportPdf" layoutX="522.0" layoutY="580.0" mnemonicParsing="false" onAction="#exportPDF" prefHeight="43.0" prefWidth="129.0" styleClass="btn-update" stylesheets="@report.css" text="استخراج PDF" textAlignment="CENTER">
            <effect>
                <InnerShadow />
            </effect>
        </Button>
        <TextField fx:id="txtSearch" alignment="CENTER_RIGHT" layoutX="55.0" layoutY="80.0" onKeyReleased="#Search" prefHeight="39.0" prefWidth="750.0" promptText="محرر البحث" styleClass="report_feild" stylesheets="@report.css" />
        <ImageView fitHeight="40.0" fitWidth="40.0" layoutX="42.0" layoutY="27.0" onMouseClicked="#goBack" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../backward.png" />
            </image>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
            <effect>
                <Bloom threshold="0.5" />
            </effect>
        </ImageView>
    </children>
</AnchorPane>
